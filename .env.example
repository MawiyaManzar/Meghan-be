# Application Settings
APP_NAME=Meghan API
APP_VERSION=1.0.0
DEBUG=true

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=43200

# CORS Origins (comma-separated or JSON array)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Database - PostgreSQL (Production)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=meghan
POSTGRES_USER=meghan_user
POSTGRES_PASSWORD=meghan_password

# Database - SQLite (Development fallback)
DATABASE_URL=sqlite:///./meghan.db

# MongoDB (Chat sessions and wellbeing data)
MONGODB_URL=mongodb://localhost:27017
MONGODB_DB=meghan_chat

# Redis (Caching and sessions)
REDIS_URL=redis://localhost:6379/0

# AI/LLM Configuration
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-2.5-flash
GEMINI_TEMPERATURE=0.7
GEMINI_TOP_P=0.95
GEMINI_MAX_OUTPUT_TOKENS=500
GEMINI_THINKING_BUDGET=200